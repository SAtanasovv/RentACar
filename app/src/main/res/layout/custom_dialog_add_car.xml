<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android           ="http://schemas.android.com/apk/res/android"
    xmlns:app               ="http://schemas.android.com/apk/res-auto"
    android:layout_width    ="match_parent"
    android:layout_height   ="wrap_content"
    android:orientation     ="vertical">

    <com.google.android.material.textfield.TextInputLayout
        android:id                  ="@+id/minutesTxtInputLayout"
        android:layout_width        ="match_parent"
        android:layout_height       ="wrap_content"
        android:layout_marginStart  ="18dp"
        android:layout_marginTop    ="16dp"
        android:layout_marginEnd    ="18dp"
        android:hint                ="@string/time_for_hire"
        android:visibility          ="gone"
        android:maxLength           ="5"
        app:counterEnabled          ="true"
        app:counterMaxLength        ="5">

        <EditText
            android:id              ="@+id/minutesEditText"
            android:layout_width    ="match_parent"
            android:layout_height   ="wrap_content"
            android:maxLines        ="1"
            android:maxLength       ="5"
            android:textSize        ="17sp"
            android:inputType       ="number"
            android:gravity         ="center"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id                  ="@+id/carModelTxtInputLayout"
        android:layout_width        ="match_parent"
        android:layout_height       ="wrap_content"
        android:layout_marginStart  ="18dp"
        android:layout_marginTop    ="16dp"
        android:layout_marginEnd    ="18dp"
        android:hint                ="@string/model"
        android:maxLength           ="18"
        app:counterEnabled          ="true"
        app:counterMaxLength        ="18">

        <EditText
            android:id              ="@+id/carModelEditText"
            android:layout_width    ="match_parent"
            android:layout_height   ="wrap_content"
            android:maxLines        ="1"
            android:maxLength       ="18"
            android:textSize        ="17sp" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id                  ="@+id/regNumberLayout"
        android:layout_width        ="match_parent"
        android:layout_height       ="wrap_content"
        android:layout_marginStart  ="18dp"
        android:layout_marginTop    ="18dp"
        android:layout_marginEnd    ="18dp"
        android:hint                ="@string/reg_number"
        android:maxLength           ="7"
        app:counterEnabled          ="true"
        app:counterMaxLength        ="7">

        <EditText
            android:id              ="@+id/regNumberEdit"
            android:layout_width    ="match_parent"
            android:layout_height   ="wrap_content"
            android:lines           ="1"
            android:maxLength       ="7"
            android:textSize        ="16sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <RelativeLayout
        android:layout_width        ="match_parent"
        android:layout_height       ="wrap_content"
        android:layout_marginTop    ="8dp"
        android:layout_marginBottom ="8dp"
        android:orientation         ="horizontal">

        <Button
            android:id                  ="@+id/addCarCancelButton"
            android:layout_width        ="wrap_content"
            android:layout_height       ="wrap_content"
            android:layout_toStartOf    ="@+id/addCarAddButton"
            android:text                ="@string/cancel"
            android:textSize            ="14sp"/>

        <Button
            android:id                      ="@+id/addCarAddButton"
            android:layout_width            ="wrap_content"
            android:layout_height           ="wrap_content"
            android:layout_alignParentEnd   ="true"
            android:layout_marginStart      ="8dp"
            android:layout_marginEnd        ="12dp"
            android:text                    ="@string/ok"
            android:textSize                ="14sp"/>

    </RelativeLayout>
</LinearLayout>